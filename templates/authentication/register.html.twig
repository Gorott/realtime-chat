{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg p-4 rounded-4 bg-dark border-light" style="max-width: 400px; width: 100%;">
            <h2 class="text-center mb-4 text-light">Log In</h2>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_label(registrationForm.username) }}
                {{ form_widget(registrationForm.username) }}
            </div>
            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
            {{ form_row(registrationForm.submit) }}
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
